// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  // [수정] output을 제거하여 기본 경로(node_modules/.prisma/client)를 사용하게 합니다.
  // pnpm 환경에서는 기본 경로를 쓰는 것이 모듈 참조 에러를 방지하는 가장 좋은 방법입니다.
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  // [수정] URL 설정은 prisma.config.ts에서 관리하므로 여기서는 비워둡니다. (Prisma 7 기준)
}

model Layout {
  id     Int    @id @default(autoincrement())
  page   String @unique
  config Json
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Subscriber {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Information {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  image     String?
  createdAt DateTime @default(now())
}

model Portfolio {
  id      Int     @id @default(autoincrement())
  brand   String
  name    String
  title   String
  content String  @db.Text
  image   String?
}

model Project {
  id    Int    @id @default(autoincrement())
  type  String
  title String
  link  String?
  image String?
}

model Partner {
  id    Int    @id @default(autoincrement())
  name  String
  logo  String
  url   String?
}

model PartnerCeo {
  id          Int      @id @default(1)
  position    String
  name        String
  englishName String
  description String   @db.Text
  image       String?
  updatedAt   DateTime @updatedAt
}

model OutroMessage {
  id        Int      @id @default(1)
  title     String
  subtitle  String
  updatedAt DateTime @updatedAt
}

model CompanyInfo {
  id        Int      @id @default(1)
  address   String
  phone     String
  fax       String?
  mail      String
  latitude  Decimal?
  longitude Decimal?
  updatedAt DateTime @updatedAt
}
